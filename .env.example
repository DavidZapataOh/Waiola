# =============================================================================
# Waiola RFQ - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to git (it's in .gitignore).

# =============================================================================
# DEPLOYER
# =============================================================================
# Private key for deployment and demo transactions
DEPLOYER_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE

# =============================================================================
# TESTNET RPC URLs
# =============================================================================
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# =============================================================================
# UNISWAP V4 POOL MANAGER ADDRESSES (per chain)
# =============================================================================
# Sepolia (chainId: 11155111)
SEPOLIA_POOL_MANAGER=0xE03A1074c86CFeDd5C142C4F04F1a1536e203543

# Base Sepolia (chainId: 84532)
BASE_SEPOLIA_POOL_MANAGER=0x05E73354cFDd6745C338b50BcFDfA3Aa6fA03408

# Arbitrum Sepolia (chainId: 421614)
ARBITRUM_SEPOLIA_POOL_MANAGER=0xFB3e0C6F74eB1a21CC1Da29aeC80D2Dfe6C9a317

# =============================================================================
# DEMO TOKEN ADDRESSES (fill after deploying or using existing testnet tokens)
# =============================================================================
# Token0 must have lower address than Token1
TOKEN0=0x_TOKEN0_ADDRESS
TOKEN1=0x_TOKEN1_ADDRESS

# =============================================================================
# DEPLOYED CONTRACT ADDRESSES (filled by deployment scripts)
# =============================================================================
HOOK_ADDRESS=0x_HOOK_ADDRESS
REGISTRY_ADDRESS=0x_REGISTRY_ADDRESS
VERIFIER_ADDRESS=0x_VERIFIER_ADDRESS
HASHER_ADDRESS=0x_HASHER_ADDRESS

# =============================================================================
# ENS CONFIGURATION (for maker setup)
# =============================================================================
MAKER_ENS_NAME=your-maker-name.eth
MAKER_PRIVATE_KEY=0x_MAKER_PRIVATE_KEY
MAKER_ENDPOINT=http://localhost:3000

# =============================================================================
# TAKER CONFIGURATION
# =============================================================================
TAKER_PRIVATE_KEY=0x_TAKER_PRIVATE_KEY

# =============================================================================
# ETHERSCAN VERIFICATION API KEYS
# =============================================================================
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY
